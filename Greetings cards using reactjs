import React from 'react';

const GreetingCard = ({ message, backgroundColor, textColor }) => {
  const cardStyle = {
    backgroundColor: backgroundColor || '#f0f0f0',
    padding: '20px',
    borderRadius: '8px',
    boxShadow: '0 2px 4px rgba(0, 0, 0, 0.2)',
    color: textColor || '#333',
    fontSize: '18px',
  };

  return (
    <div style={cardStyle}>
      <p>{message || 'Hello, World!'}</p>
    </div>
  );
};

export default GreetingCard;
