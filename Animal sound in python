# Step 1: Create a base class Animal
class Animal:
    def make_sound(self):
        print("Generic animal sound")

# Step 2: Create subclasses Dog and Cat
class Dog(Animal):
    def make_sound(self):
        print("Bark")

class Cat(Animal):
    def make_sound(self):
        print("Meow")

# Step 4: Implement the animal_sound_in_zoo() function
def animal_sound_in_zoo(animal):
    animal.make_sound()

# Step 5: Create instances of Dog and Cat classes and call the animal_sound_in_zoo() function
if __name__ == "__main__":
    dog = Dog()
    cat = Cat()

    animal_sound_in_zoo(dog)
    animal_sound_in_zoo(cat)
